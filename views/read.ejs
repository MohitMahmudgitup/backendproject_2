<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/read.css">
    <title>Document</title>
</head>

<body>
    <div class="user_click ">
        <a class="h1" href="/">Users</a>
        <div class="users cards ">

            <% users.forEach ((user)=>{ %>
                <div class="user card max-w-72 p-4 bg-zinc-800 rounded-lg ">
                    <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden">
                        <img class="w-full h-full object-cover" src="<%= user.image %>" alt="">
                    </div>
                    <h3 class="text-xl mt-3 tracking-tighter"> <%= user.name %> </h3>
                    <h5 class="text-zinc-600"><%= user.email  %></h5>
                    <div class="flex gap-3 mt-10">
                        <a class="text-zinc-100 " href="/edit/<%= user._id %>">Edit User</a>
                        <a class="text-red-500 " href="/delete/<%= user._id %>">Delete User</a>
                    </div>
                </div>
                <% }) %>







    </div>
    <script src="https://cdn.tailwindcss.com"></script>
</body>

</html>